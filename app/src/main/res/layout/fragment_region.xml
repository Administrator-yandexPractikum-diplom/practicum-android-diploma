<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.region.RegionFragment"
android:orientation="vertical">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/vacancy_toolbar"
    style="@style/Text_Header"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    app:title="@string/chose_region"
    app:navigationIcon="@drawable/arrow_back"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

</androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@drawable/rounded_edittext">

        <EditText
            android:id="@+id/edit"
            style="@style/Text_Standard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_search"
            android:drawablePadding="@dimen/margin_16"
            android:hint="@string/enter_region"
            android:inputType="text"
            android:lines="1"
            android:maxLength="25"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_16"
            android:textColorHint="@color/YP_Text_Gray"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/color_cursor"/>

    </FrameLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_16">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/region_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</FrameLayout>


</LinearLayout>
